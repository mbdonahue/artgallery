<%= form_for(@destination)  do |f| %>
  <% if @destination.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@destination.errors.count, "error") %> prohibited this destination from being saved:</h2>

      <ul>
      <% @destination.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "Title" %><br>
    <%= f.text_field :city, class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.label "Medium" %><br>
    <%= f.text_field :country , class: 'form-control'%>
  </div>
  <div class = 'form-group'>
      <%=f.label "Photo"%><br>
      <%=f.file_field :avatar%>
  </div>
  <div class="form-group">
    <%= f.label "Price" %><br>
    <%= f.number_field :population, class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description , class: 'form-control', rows: '2'%>
  </div>
  <div class="actions">
    <%= f.submit "Add Artwork" %>
  </div>
<% end %>
